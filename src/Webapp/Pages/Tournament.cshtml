@page "/tournaments/{tournamentId}"
@model Webapp.Pages.TournamentModel
@{
  ViewData["Title"] = "Tournament";
}

<h1>@Model.Tournament.Name</h1>

@if (Model.IsOwner)
{
  <a asp-area="" asp-page="/EditTournament" asp-route-tournamentId=@Model.Tournament.Id>Edit tournament</a>
}

<h2>Players</h2>

@if (Model.IsOwner)
{
  <a asp-area="" asp-page="/CreatePlayers" asp-route-tournamentId=@Model.Tournament.Id>Create players</a>
}

<ul>
  @foreach (var player in Model.Players)
  {
    <li aria-label="@(player.Id == Model.CurrentPlayer?.Id ? "current player" : null)">@player.Name</li>
  }
</ul>

<h2>Games</h2>

@if (Model.IsOwner)
{
  <a asp-area="" asp-page="/CreateGame" asp-route-tournamentId=@Model.Tournament.Id>Create game</a>
}

<ul>
  @foreach (var game in Model.Games)
  {
    <li>
      <a asp-area="" asp-page="/Game" asp-route-tournamentId=@Model.Tournament.Id asp-route-gameId=@game.Id>@game.Name</a>
    </li>
  }
</ul>