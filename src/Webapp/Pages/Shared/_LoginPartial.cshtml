@using Microsoft.AspNetCore.Identity
@using Webapp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="flex justify-center items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Page("/", new { area = "" })">
            <button id="logout" type="submit"  class="hover:bg-stone-200 rounded-md p-2"><i data-lucide="door-open"></i></button>
        </form>
    }
    else
    {
        <a class="hover:bg-stone-200 rounded-md p-2" id="login" asp-area="Identity" asp-page="/Account/Login"><i data-lucide="user"></i></a>
    }
</div>
