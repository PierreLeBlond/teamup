@namespace Webapp.Pages
@model PlayerPartial

<div class="flex justify-between items-center gap-4 w-full rounded-md @(Model.Player.Id == Model.CurrentPlayer?.Id ? "font-bold" : "")">
<h2 aria-label="@(Model.Player.Id == Model.CurrentPlayer?.Id ? "current player" : null)">@Model.Player.Name</h2>
<p aria-label="player @Model.Player.Name score">@Model.Player.Score</p>
</div>