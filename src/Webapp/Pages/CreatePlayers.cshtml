@page "/tournaments/{tournamentId}/players/create"
@model Webapp.Pages.CreatePlayersModel
@{
  ViewData["Title"] = "Create Players";
}

<h1>@Model.Tournament.Name</h1>

<h2>Create new players</h2>
<form method="post">
  <label asp-for="Input.Name"></label>
  <input asp-for="Input.Name">
  <span asp-validation-for="Input.Name"></span>
  <button type="submit">Create</button>
</form>

<h2>Players</h2>
<ul>
  @foreach (var player in Model.Players)
  {
    <li>@player.Name</li>
  }
</ul>