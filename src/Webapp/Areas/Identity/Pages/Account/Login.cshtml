@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

  <div class="w-full flex flex-col gap-4 items-center">
@{
    if ((Model.ExternalLogins?.Count ?? 0) == 0)
    {
        <div>
            <p>
                There are no external authentication services configured. See this <a
                    href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                    about setting up this ASP.NET application to support logging in via external services</a>.
            </p>
        </div>
    }
    else
    {
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" name="provider" value="@provider.Name" class="btn"
                    title="Log in using your @provider.DisplayName account">Log in using @provider.DisplayName</button>
            }
        </form>
    }
}
</div>